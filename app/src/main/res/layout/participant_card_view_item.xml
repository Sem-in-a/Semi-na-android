<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/participantImageView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/participant_1"
            app:shapeAppearanceOverlay="@style/roundedImageView" />

        <com.google.android.material.chip.Chip
            android:id="@+id/participantCollegeChipView"
            style="@style/Body3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:checkable="false"
            android:clickable="false"
            android:text="IT대학"
            app:chipBackgroundColor="@color/chip_bg"
            app:chipCornerRadius="4dp"
            app:chipEndPadding="4dp"
            app:chipMinHeight="20dp"
            app:chipMinTouchTargetSize="0dp"
            app:chipStartPadding="4dp"
            app:chipStrokeColor="@color/chip_bg" />

        <TextView
            android:id="@+id/participantNameTextView"
            style="@style/Body3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="최서현"></TextView>
    </LinearLayout>
</androidx.cardview.widget.CardView>