<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    tools:context=".view.create.CreateHobbyActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="114dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취미 종류를 정해주세요"
            android:textColor="@color/black"
            style="@style/SubTitle1"/>
        <GridLayout
            android:layout_marginTop="40dp"
            android:columnCount="4"
            android:rowCount="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/create_hobby_exercise"
                    android:src="@drawable/hobby_exercise"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    />
                <TextView
                    style="@style/Body3"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="운동"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/create_hobby_food"
                    android:src="@drawable/hobby_food"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    />
                <TextView
                    style="@style/Body3"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="음식"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/create_hobby_music"
                    android:src="@drawable/hobby_music"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    />
                <TextView
                    style="@style/Body3"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="음악"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/create_hobby_book"
                    android:src="@drawable/hobby_book"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    />
                <TextView
                    style="@style/Body3"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="독서"/>
            </LinearLayout>
        </GridLayout>
    </LinearLayout>

    <Button
        android:id="@+id/activity_create_hobby_next_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        style="@style/Button1"
        android:clickable="true"
        android:text="다음"
        android:background="@drawable/button_border"
        android:focusable="true" />


</LinearLayout>