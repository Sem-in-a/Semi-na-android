<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/create_location_textView"
        style="@style/Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="101í˜¸"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/create_location_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/chevron_right"
        app:layout_constraintBaseline_toBaselineOf="@id/create_location_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/create_location_textView" />

    <View
        app:layout_constraintTop_toBottomOf="@+id/create_location_textView"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="18dp"
        android:background="@color/gray_400"/>

</androidx.constraintlayout.widget.ConstraintLayout>
